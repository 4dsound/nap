QMainWindow
{
    background-color: @background2;
}

QWidget
{
    font-family: "@font1";
    font-size: 14px;
    selection-background-color:@front3;
    selection-color: @dark1;
    border: none;
}

QMenuBar {
    color: @front3;
}

QMenu {
    background-color: @front0;
    color: @front3;
}

QDialog, QLabel {
    color: @front3;
    background-color: @background2;
    margin-right: 0.2em

}

QAbstractScrollArea {
    color: @front3;
    background: @background1;
    alternate-background-color: @front0;
    border: 0;
}

QHeaderView:section {
    color: @front2;
    background-color: @header;
    border: 0;
    padding-left: 4px;
}

QGroupBox {
    border: 0;
    margin-top: 22px;
    background-color: @front3;
}

QGroupBox:title {
    color: @dark2;
    background-color: @front3;
}

QDockWidget {
    color: @front4;
    border: 1px solid @header;
    font-family: "@font2";
    titlebar-close-icon:url(:/icons/icon_close_nap.png);
    titlebar-normal-icon:url(:/icons/icon_restore_nap.png);
    /*padding: 10px;*/
}

QDockWidget::close-button,QDockWidget::float-button{
  subcontrol-position:top right;
  subcontrol-origin:margin;
  position:absolute;
  top:3px;
  bottom:0px;
  width:12px;
  height:12px;
  border:none;
}

QDockWidget::close-button{
  right:3px;
}

QDockWidget::float-button{
  right:18px;
}


QDockWidget::title {
    text-align: left;
    background: @front2;
    padding: 4px;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}

QLineEdit {
    border: none;
    border-radius: 0px;
    padding-left: 3px;
    padding-right: 10px;
    background: @dark2;
    color: @front3;
}

QLineEdit:focus {
    color: @front3;
    background: @dark1;
}

QScrollBar:horizontal,
QScrollBar:vertical {
    border-radius: 0px;
    background: @header;
}

QScrollBar::handle:horizontal,
QScrollBar::handle:vertical {
    background: @front0;
    border-radius: 0px;
}
QScrollBar::handle:horizontal:hover,
QScrollBar::handle:vertical:hover {
    background: @front2;
    border-radius: 0px;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal,
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal,
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QPushButton, QToolButton {
    font-family: "@font1";
    color: @dark1;
    background: @front2;
    border-radius: 2px;
    margin: 2px;
    border: 0;
    padding: 3px 10px 3px 10px;
}

QPushButton:hover {
    background: @front3;
}
QPushButton:pressed {
    background: @dark1;
    color: @front3;
}
QPushButton:!enabled {
    background-color: @dark2;
    color: @dark1;
}

QTabBar {
    qproperty-drawBase: 0;
}

QTabBar:tab {
    padding: 2px 6px 2px 6px;
    color: @front4;
    background: @front2;
    border: 0;
}

QTabBar:tab::!selected {
    color: @front3;
    background: @front0;
}

QStatusBar {
    color: @front3;
    background: @status;
}

QGraphicsView {
    background: @front2;
}

