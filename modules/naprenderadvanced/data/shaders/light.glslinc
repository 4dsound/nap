// NAP Shader include file

struct DirectionalLight
{
	mat4 lightViewProjection;
	vec3 origin;
	vec3 direction;
	vec3 color;
	float intensity;
};

struct PointLight
{
	mat4 lightViewProjection;
	vec3 origin;
	vec3 color;
	float intensity;
	float attenuation;
};

struct SpotLight
{
	mat4 lightViewProjection;
	vec3 origin;
	vec3 color;
	float intensity;
	float angle;
	float falloff;
};
